    M=$M,
    N=$N,
    T_bch=$T_bch,
    T_g=$T_g,
    T_p=$T_p,
    T_s=$T_s,
    bs_slots=$bs_slots,
    control=$control,
    cp_ratio=$cp_ratio,
    samp_rate=$samp_rate,
    activation_rate=$activation_rate,
)</make>
  <callback>set_M($M)</callback>
  <callback>set_N($N)</callback>
  <callback>set_T_bch($T_bch)</callback>
  <callback>set_T_g($T_g)</callback>
