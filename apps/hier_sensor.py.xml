    <name>BS Slots</name>
    <key>bs_slots</key>
    <value>range(5)</value>
    <type>raw</type>
  </param>
  <param>
    <name>Slot Access Policy</name>
    <key>control</key>
    <value>all</value>
    <type>raw</type>
  </param>
  <param>
    <name>cp_ratio</name>
    <key>cp_ratio</key>
    <value>0.25</value>
