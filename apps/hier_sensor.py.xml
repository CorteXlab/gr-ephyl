    <name>M</name>
    <key>M</key>
    <value>64</value>
    <type>raw</type>
  </param>
  <param>
    <name>N</name>
    <key>N</key>
    <value>1</value>
    <type>raw</type>
  </param>
  <param>
    <name>BCH duration (ms)</name>
    <key>T_bch</key>
    <value>10</value>
    <type>raw</type>
  </param>
  <param>
    <name>Guard time duration (ms)</name>
    <key>T_g</key>
    <value>20</value>
